{% trans_default_domain 'FruitwareContactBundle' %}

{% block body_text %}
{% autoescape false %}
{{ 'fruitware_contact.email_message_txt'|trans({
    '%title%':     contact.titleValue|trans,
    '%firstName%': contact.firstName,
    '%lastName%':  contact.lastName,
    '%email%':     contact.email,
    '%message%':   contact.message
}) }}
{% endautoescape %}
{% endblock %}

{% block body_html %}
