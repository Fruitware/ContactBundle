{% trans_default_domain 'FruitwareContactBundle' %}

{% block default_subject %}
    {{ 'fruitware_contact.email_default_subject'|trans }}
{% endblock %}

{% block body_text %}
{% autoescape false %}
{{ 'fruitware_contact.email_message_txt'|trans({
    '%firstName%': contact.firstName,
    '%lastName%':  contact.lastName|default(''),
    '%email%':     contact.email,
    '%message%':   contact.message
}) }}
{% endautoescape %}
{% endblock %}

{% block body_html %}
{% autoescape false %}
{{ 'fruitware_contact.email_message_html'|trans({
    '%firstName%': contact.firstName,
    '%lastName%':  contact.lastName|default(''),
    '%email%':     contact.email,
    '%message%':   contact.message|nl2br
}) }}
{% endautoescape %}
{% endblock %}
