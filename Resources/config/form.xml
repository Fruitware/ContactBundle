<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="fruitware_contact.form" factory-method="createNamed" factory-service="form.factory" class="Symfony\Component\Form\Form">
            <argument>%fruitware_contact.form.name%</argument>
            <argument>%fruitware_contact.form.type%</argument>
            <argument>null</argument>
            <argument type="collection">
                <argument key="validation_groups">%fruitware_contact.form.validation_groups%</argument>
                <argument key="translation_domain">FruitwareContactBundle</argument>
            </argument>
        </service>

        <service id="fruitware_contact.form.type.contact_type" class="Fruitware\ContactBundle\Form\Type\ContactType">
            <tag name="form.type" alias="fruitware_contact" />
            <argument id="fruitware_contact.subject_provider.noop" type="service"></argument>
            <argument>%fruitware_contact.contact.class%</argument>
            <argument>%fruitware_contact.form.captcha_type%</argument>
        </service>

        <service id="fruitware_contact.form.handler.default" class="Fruitware\ContactBundle\Form\Handler\ContactFormHandler" scope="request" public="false">
            <argument type="service" id="fruitware_contact.form" />
            <argument type="service" id="fruitware_contact.contact_manager" />
            <argument type="service" id="request" />
            <argument type="service" id="router" />
            <argument type="service" id="event_dispatcher" />
        </service>

        <service id="fruitware_contact.subject_provider.noop" class="Fruitware\ContactBundle\Provider\NoopSubjectProvider">
        </service>
    </services>

</container>
