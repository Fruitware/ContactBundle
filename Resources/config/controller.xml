    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="fruitware_contact.contact_controller" class="Fruitware\ContactBundle\Controller\ContactController" scope="request">
            <argument type="service" id="fruitware_contact.form" />
            <argument type="service" id="fruitware_contact.form.handler" />
            <argument type="service" id="fruitware_contact.contact_manager" />
            <argument type="service" id="router" />
            <argument type="service" id="session" />
            <argument type="service" id="templating" />
        </service>
    </services>

</container>
